sudo easy_install rope ropemode ropevim

cd ~
git clone http://github.com/username/dotvim.git ~/.vim
ln -s ~/.vim/vimrc ~/.vimrc
ln -s ~/.vim/gvimrc ~/.gvimrc
ls -s ~/.vim/PythonTidy ~/bin/PythonTidy
chmod 755 ~/bin/PythonTidy
cd ~/.vim
